<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/layoutForCompetitions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#656f65">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Natjecanja"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnAddNewCompetition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="#066006"
            android:text="+"
            android:textColor="#00FF00"
            android:textSize="20sp"
            android:onClick="addCompetition"
            />



    </RelativeLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/competitionsListView"
        >

    </ListView>


</LinearLayout>
