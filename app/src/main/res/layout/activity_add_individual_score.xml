<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/add_individual_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="*ako ste već dodavali bodove za ovoga pojedinca u ovome timu, samo će broj bodova biti promijenjen*
                           \n*ako je odabrani pojedinac u drugome timu on će biti premješen u novo odabrani tim"
            android:textStyle="italic" />

        <Spinner
            android:id="@+id/add_individual_spinner_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@android:drawable/btn_dropdown"
            android:gravity="center_horizontal"
            android:spinnerMode="dropdown" />

        <Spinner
            android:id="@+id/add_individual_spinner_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@android:drawable/btn_dropdown"
            android:gravity="center_horizontal"
            android:spinnerMode="dropdown" />

        <!-- da EditText ne bi dobio focus -->
        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="0px"
            android:layout_height="0px"/>

        <EditText
            android:layout_gravity="center_horizontal"
            android:id="@+id/add_individual_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal"
            android:hint="broj bodova..."
            android:inputType="numberDecimal" />

        <Button
            android:layout_gravity="center_horizontal"
            android:id="@+id/add_individual_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spremi" />

    </LinearLayout>

</ScrollView>