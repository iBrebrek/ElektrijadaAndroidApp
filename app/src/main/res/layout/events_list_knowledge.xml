<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="50dp"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/eventTimeKnowledge"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:textSize="13sp" />


    <Space
        android:id="@+id/eventLeftSpace"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignEnd="@+id/eventTimeKnowledge"
        android:layout_alignRight="@+id/eventTimeKnowledge" />

    <TextView
        android:id="@+id/eventNameKnowledge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/eventLeftSpace"
        android:layout_alignRight="@+id/eventRightSpace"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:textColor="#000099"
        android:textStyle="bold" />

    <Space
        android:id="@+id/eventRightSpace"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignLeft="@+id/eventResultKnowledge"
        android:layout_alignStart="@+id/eventResultKnowledge" />

    <TextView
        android:id="@+id/eventResultKnowledge"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:minWidth="50sp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:textSize="15sp" />

</RelativeLayout>