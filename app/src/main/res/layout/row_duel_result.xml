<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="match_parent">

    <TextView
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text=" : "
        android:padding="5dp"
        android:id="@+id/duel_result_row_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/duel_result_row_dots"
        android:padding="5dp"
        android:id="@+id/duel_result_row_left_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"/>

    <TextView
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/duel_result_row_left_score"
        android:padding="5dp"
        android:gravity="center"
        android:id="@+id/duel_result_row_left_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:textColor="#000099"
        android:textStyle="bold" />

    <TextView
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/duel_result_row_dots"
        android:padding="5dp"
        android:id="@+id/duel_result_row_right_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"/>

    <TextView
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/duel_result_row_right_score"
        android:gravity="center"
        android:padding="5dp"
        android:id="@+id/duel_result_row_right_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:textColor="#000099"
        android:textStyle="bold" />

</RelativeLayout>