<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:padding="5dp"
        android:id="@+id/team_results_person_rank"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:padding="5dp"
        android:id="@+id/team_results_person_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textSize="15sp"/>

    <TextView
        android:padding="5dp"
        android:id="@+id/team_results_person_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/team_results_person_rank"
        android:layout_toLeftOf="@id/team_results_person_result"
        android:maxLines="3"
        android:textColor="#000099"
        android:textStyle="bold" />

</RelativeLayout>