<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hr.fer.elektrijada" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".activities.events.EventsActivity"
            android:label="Elektrijada"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.events.CreateNewEventActivity"
            android:label="Novi dogaaj"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".activities.events.EditEventActivity"
            android:label="Uredi dogaaj"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".activities.events.ViewEventActivity"
            android:label="Dogaaj"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".activities.news.NewsFeedActivity"
            android:label="Vijesti"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".activities.news.NewsActivity"
            android:label="Vijest"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".activities.news.EditNewsActivity"
            android:label="Ureivanje vijesti"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".activities.settings.SettingsActivity"
            android:theme="@style/AppTheme.NoActionBar"
            >
        </activity>
    </application>

</manifest>
